border-1px($color)
   position relative
   &::after
      display block
      position absolute
      left 0px
      bottom 0
      content ''
      width 100%
      border-bottom 1px solid $color


bg-image($url)
  background-image url($url + "@2x.png")
  @media (-webkit-min-device-pixel-ratio: 3),(min-device-pixel-ratio)
    background-image url($url + "@3x.png")

icon(num,$width,$height)
  .icon
    display inline-block
    width  $width
    height $height
    background-size $width $height
    vertical-align middle
  .decrease
    bg-image('../../common/images/decrease_'+num)
  .discount
    bg-image('../../common/images/discount_'+num)
  .special
    bg-image('../../common/images/special_'+num)
  .invoice
    bg-image('../../common/images/invoice_'+num)
  .guarantee
    bg-image('../../common/images/guarantee_'+num)
