html,body,#app
  line-weight 1
  font-weight 100
  font-size 12px
  width 100%
  height 100%
.border-1px
     &::after
        @media (-webkit-min-device-pixel-ratio:3),(min-device-pixel-ratio:3)
           -webkit-transfrom scaleY(0.33)
           transfrom scaleY(0.33)
        @media (-webkit-min-device-pixel-ratio:2),(min-device-pixel-ratio:2)
            -webkit-transfrom scaleY(0.5)
            transfrom scaleY(0.5)
.clearfix::after
           display inline-block
           content '.'
           height 0
           visibility hidden
           clear both
           border none

